<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/scrollView"
        android:padding="4sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="* Cosmic radiation at sea level (26 mrem)"
                android:textSize="20sp"
                android:id="@+id/textView1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="* Select your elevation from sea level (in feet) : "
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/spinner"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="* Select Your area of residence : "
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/spinner2"
                android:layout_gravity="center_horizontal"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="* "
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity" />


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="Select if you live in a stone, brick, or concrete building (7 mrem)"
                    android:id="@+id/checkBox"
                    android:layout_centerHorizontal="true"
                    android:checked="false"
                    android:textAlignment="gravity"
                    android:textSize="15sp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>